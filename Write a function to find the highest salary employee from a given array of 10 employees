/*  Write a function to find the highest salary employee from a given array of 10 employees.
    [Refer structure from question 1]  */
#include<stdio.h>
#include<string.h>

struct employe
{
    int id;
    char name[20];
    float salary;
};

  struct employe input()
    {    struct employe x;
        printf("Enter a employe id, name and salary : ");
        scanf("%d",&x.id); fflush(stdin);
        fgets(x.name,20,stdin);
        x.name[strlen(x.name)-1]=0;
        scanf("%f",&x.salary);
        return x;
    }
  
  void show(struct employe x)
  {
     printf("\n%d  %s   %.2f",x.id,x.name,x.salary);
  }

  float high(struct employe *em, int x)
  {  
        float ret=em[0].salary;
     for (int i = 0; i < x-1; i++)
      if ( em[0].salary <= em[i].salary )
        ret = em[i].salary;
       
     return ret;
  }


    int main()
{
        struct employe em[10];
    for (int i = 0; i < 10; i++)
     em[i] = input();

    printf("Highest salary of employe = %.2f",high(em,10));
   
    return 0;
}
