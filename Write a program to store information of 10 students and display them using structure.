// Write a program to store information of 10 students and display them using structure. 
#include<stdio.h>
#include<string.h>
    int main()
{
        struct student
        {
           int rn;
           char name[30];
           int class;
           float fee;
        };

    struct student st[10];

    for (int i = 0; i < 10; i++)
    {
        printf("Enter Roll No, Name, Class, Fee in sequence : ");
        scanf("%d",&st[i].rn);  fflush(stdin);
        fgets(st[i].name, 30, stdin);
        st[i].name[strlen(st[i].name)-1] = 0;
        scanf("%d",&st[i].class);
        scanf("%f",&st[i].fee);
    }

    for (int i = 0; i < 10; i++)
     printf("\nRoll No = %d\nName : %s\nClass = %d\nFees = %.2f\n",
      st[i].rn,st[i].name,st[i].class,st[i].fee);
    
    
        
        
    return 0;
}
