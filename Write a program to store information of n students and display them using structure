// Write a program to store information of n students and display them using structure 
#include<stdio.h>
#include<string.h>

    int main()
{
    int n;
    printf("How many student : ");
    scanf("%d",&n);

    struct student
    {
        int roll;
        char name[30];
        float mark;
    };

    struct student std[n];

    for (int i = 0; i < n; i++)
     {
        printf("Enter a Roll No : ");
        scanf("%d",&std[i].roll);       fflush(stdin);
        printf("Enter a Name : ");
        fgets(std[i].name, 30, stdin);             std[i].name[strlen(std[i].name)-1] = 0;
        printf("Enter a Mark : ");
        scanf("%f",&std[i].mark);
     }

    for (int i = 0; i < n; i++)
     printf("\nRoll No. = %d\nName : %s\nMark = %.2f\n",std[i].roll,std[i].name,std[i].mark);  
        
    return 0;
}
